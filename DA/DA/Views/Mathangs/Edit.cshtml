@model DA.Models.Mathang

@{
    ViewData["Title"] = "Sửa mặt hàng";
}
<br />

<h1>SỬA</h1>

<h4>Mặt hàng</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaMh" />
            <div class="form-group">
                <label asp-for="Ten" class="control-label"></label>
                <input asp-for="Ten" class="form-control" required />
                <span asp-validation-for="Ten" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GiaGoc" class="control-label"></label>
                <input asp-for="GiaGoc" class="form-control" required />
                <span asp-validation-for="GiaGoc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GiaBan" class="control-label"></label>
                <input asp-for="GiaBan" class="form-control" />
                <span asp-validation-for="GiaBan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoLuong" class="control-label"></label>
                <input asp-for="SoLuong" class="form-control" required/>
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MoTa" class="control-label"></label>
                @* <input asp-for="MoTa" class="form-control" /> *@
                <textarea asp-for="MoTa" class="form-control" required></textarea>
                <span asp-validation-for="MoTa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HinhAnh" class="control-label"></label> 
                <input type="file" asp-for="HinhAnh" class="form-control" required />
                <span asp-validation-for="HinhAnh" class="text-danger">Hình ảnh hiện tại: @Model.HinhAnh</span>
            </div>
            <div class="form-group">
                <label asp-for="LuotXem" class="control-label"></label>
                <input asp-for="LuotXem" class="form-control" readonly />
                <span asp-validation-for="LuotXem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LuotMua" class="control-label"></label>
                <input asp-for="LuotMua" class="form-control" readonly />
                <span asp-validation-for="LuotMua" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaNh" class="control-label"></label>
                <select asp-for="MaNh" class="form-control" asp-items="ViewBag.MaNh"></select>
                <span asp-validation-for="MaNh" class="text-danger"></span>
            </div>
            </br>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-info">Quay lại</a>
            </div>
        </form>
    </div>
</div>
@* 
<div>
    <a asp-action="Index">Quay lại</a>
</div> *@

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
