@{
    ViewData["Title"] = "Đổi mật khẩu";
}
<br />
@if (TempData["SaiMatKhau"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert" id="failAlert">
        @TempData["SaiMatKhau"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
@if (TempData["TrongMatKhauMoi"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert" id="trongAlert">
        @TempData["TrongMatKhauMoi"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {
        // Set timeout để tự động ẩn alert sau 3 giây (3000ms)
        window.setTimeout(function () {
            $('.alert').fadeTo(500, 0).slideUp(500, function () {
                $(this).remove(); // Loại bỏ alert khi đã ẩn
            });
        }, 3000); // 3000ms = 3 giây
    });
</script>
<div class="row">
    <div class="col-sm-4"></div>
    <div class="col-sm-4">
        <div class="p-3 shadow">
            <h3 class="text-center text-info">ĐỔI MẬT KHẨU</h3>
            <form method="post" asp-action="DoiMatKhau">
                <input name="email" class="form-control" type="text" value="@ViewBag.nhanvien.Email" readonly /><br>
                <input class="form-control" type="password" name="matkhaucu"
                       placeholder="Mật khẩu cũ" required><br>
                <input class="form-control" type="password" name="matkhaumoi"
                       placeholder="Mật khẩu mới"><br>
                <div class="d-grid">
                    <input class="btn btn-info btn-block" type="submit"
                           value="Đổi mật khẩu">
                </div>
                </br>
                <div class="d-grid">
                    <a class="btn btn-warning" asp-action="Index">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
    <div class="col-sm-4"></div>
</div>